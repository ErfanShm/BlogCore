# AvvalAI API Key
API_KEY=your_aval_api_key_here

# Base URL for AvvalAI API
BASE_URL=https://api.avalapis.ir

# Endpoint for AvvalAI Chat Completions
ENDPOINT=/v1/chat/completions

# Google API Key for Custom Search Engine
API_KEY_GOOGLE=your_google_api_key_here

# Google Custom Search Engine ID
ENGINE_ID_GOOGLE=your_google_cse_id_here

# Google Drive Folder ID where generated documents will be uploaded
GOOGLE_DRIVE_FOLDER_ID=your_google_drive_folder_id_here

# Path to Google service account credentials file
GOOGLE_CREDENTIALS_FILE=credentials.json
